
.userinfo {
  width:100%;
  height: 386rpx;
  background: linear-gradient(-74deg, #0462FB, #5414E4);
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 34rpx;
}

.userinfo-nickname {
  color: #ffffff;
  font-size:24rpx;
  line-height: 25rpx;
}
.userinfo-title{
  color: #ffffff;
  font-size: 40rpx;
  line-height: 38rpx;
  margin-bottom: 17rpx;
}
.userTitle{
  display: inline-block;
}

.usermotto {
  margin-top: 200px;
}

